{
    "extends": "airbnb",
    "parser": "babel-eslint",
    
    // config
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default-member": 0,
      "import/no-named-as-default": 0,
      "react/jsx-filename-extension": 0,
      "react/jsx-closing-tag-location": 0,
      "react/sort-comp": 1,
      "no-underscore-dangle": 0, // _ 验证

      "eqeqeq": 1,          // 必须使用全等
      "react/prop-types": 0,   // react props 检查
      "camelcase": 1,
      "react/jsx-indent-props": [2, 4],  // props indent
      "react/jsx-indent": [2, 4], // jsx indent
      "react/no-string-refs": 1, // refs 废弃
      "no-param-reassign": 1,  // 禁止给参数赋值
      "no-undef": 1,           // 不能有未定义的变量
      "indent": ["error", 4],   // 4个空格缩进
      "max-len": [1, 140],
      "no-new-func": 0,

       // "comma-spacing": [2, { "before": false, "after": true }], // 控制逗号前后的空格
       // "no-mixed-spaces-and-tabs": [2, "false"],//禁止混用tab和空格
    }
};
